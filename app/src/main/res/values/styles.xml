<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorAccent">@color/colorDark</item>
    </style>

    <style name="FragmentDialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert"/>

    <style name="ImageCropTheme" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorLight</item>
        <item name="actionMenuTextColor">@color/colorLight</item>
        <item name="android:textColorPrimary">@color/colorLight</item>
    </style>

    <!-- Branded Launch Theme -->
    <style name="AppTheme.BrandedLaunch">
        <item name="android:windowBackground">@drawable/launcher_bg</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Base Toolbar Style -->
    <style name="ToolBarStyle">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorSecondary">@color/colorLight</item>
    </style>

    <!-- Base toolbar title text style -->
    <style name="ToolbarTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

</resources>
