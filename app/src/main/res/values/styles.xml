<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorAccent">@color/colorDark</item>
    </style>

    <style name="FragmentDialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
    </style>

    <style name="ImageCropTheme" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorLight</item>
        <item name="actionMenuTextColor">@color/colorLight</item>
        <item name="android:textColorPrimary">@color/colorLight</item>
    </style>

    <!-- Branded Launch Theme -->
    <style name="AppTheme.BrandedLaunch">
        <item name="android:windowBackground">@drawable/launcher_bg</item>
        <item name="android:windowFullscreen">true</item>
    </style>


</resources>
